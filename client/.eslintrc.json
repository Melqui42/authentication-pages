{
  "extends": "@rocketseat/eslint-config/react",
  "plugins": [
    "import-helpers"
  ],
  "rules": {
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always", 
        "groups": [
          "/^react/",
          "module",
          "/^axios/",
          "/^components/",
          "/^schemas/",
          "/^utils/",
          "/^pages/",
          ["parent", "sibling", "index"]
        ],
        "alphabetize": { "order": "asc", "ignoreCase": true }
      }
    ]
  }
}